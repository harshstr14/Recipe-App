<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Recipes"
            android:textColor="#DA4B2C"
            android:textSize="19sp"
            android:textAllCaps="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="27dp"
            android:fontFamily="@font/intan"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:src="@drawable/favorite_outline"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/txtview"
            android:layout_marginTop="9dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtview"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/eachitem_design"
            />
    </RelativeLayout>

</FrameLayout>