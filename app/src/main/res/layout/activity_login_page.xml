<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FA6F51"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    >

    <ImageView
        android:id="@+id/chef"
        android:layout_width="360dp"
        android:layout_height="265dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/chef1"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_below="@id/chef"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_loginpage"
        android:contentDescription="@string/todo"
        tools:ignore="ImageContrastCheck"/>

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Account"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/intan"
        android:layout_below="@id/chef"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to Continue"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/txtview1"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput1"
        android:layout_below="@id/txtview"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/person"
        app:startIconTint="@color/black"
        android:background="@drawable/bg_textinputlayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/bg_textinputlayout"
            android:backgroundTint="@android:color/transparent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput2"
        android:layout_below="@id/textInput1"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:hint="User Name"
        android:layout_marginTop="8dp"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/person"
        app:startIconTint="@color/black"
        android:background="@drawable/bg_textinputlayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/bg_textinputlayout"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput3"
        android:layout_below="@id/textInput2"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:hint="Mail"
        android:layout_marginTop="8dp"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/mail"
        app:startIconTint="@color/black"
        android:background="@drawable/bg_textinputlayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/bg_textinputlayout"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput4"
        android:layout_below="@id/textInput3"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_marginTop="8dp"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@color/black"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/black"
        android:background="@drawable/bg_textinputlayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/bg_textinputlayout"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_below="@id/textInput4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="I agree to all T&amp;C"
        android:layout_marginStart="57dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textColor="#F4F4F4"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        app:cornerRadius="10dp"
        android:backgroundTint="#DA4B2C"
        android:layout_marginTop="5dp">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:layout_below="@id/signupbtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account ? Login"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        />
</RelativeLayout>