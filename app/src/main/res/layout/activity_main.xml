<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:id="@+id/drawer_layout"
    android:layout_width="wrap_content"
    tools:openDrawer="star"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FF8A80"
                android:paddingTop="22dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipedia"
                    android:textColor="#DA4B2C"
                    android:textSize="23sp"
                    android:textAllCaps="true"
                    android:paddingTop="8.5dp"
                    android:fontFamily="@font/intan"
                    />

                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="19dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/cutlery"/>
            </androidx.appcompat.widget.Toolbar>

            <!-- Fragment container -->
            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                android:layout_above="@id/bottomNavigationBar"
                android:layout_marginTop="5dp">
            </FrameLayout>

            <LinearLayout
                android:id="@+id/bottomNavigationBar"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/navbar_home"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/home_selector"
                    android:layout_gravity="center_vertical"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/navbar_search"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginHorizontal="110dp"
                    app:srcCompat="@drawable/search_selector"
                    android:layout_gravity="center_vertical"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/navbar_favorite"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/favorite_selector"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:itemVerticalPadding="12dp"
            app:itemShapeAppearanceOverlay="@style/NavigationDrawerItemShape"
            app:itemShapeFillColor="@color/nav_item_color"
            app:itemTextAppearanceActiveBoldEnabled="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>









